.page{
    display: flex;
    flex-direction: column;
    height: 100vh;
}
.page>view{
    flex-grow: 1;
    /* border: solid red 1rpx; */
    display: flex;
    flex-direction: row;
}
.page>view>view{
    flex-grow: 1;
    /* border: solid red 1rpx; */
    display: flex;
    justify-content: center;
    align-items: center;
}
.page>view>view>view{
    width: 210rpx;
    height: 210rpx;
    background:pink;
     display: flex;
    justify-content: center;
    align-items: center;
