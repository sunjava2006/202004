}

.fruit-type-list{
    width: 80rpx;
    height: 70vh;
    background-color: rgb(231, 95, 118);
    color: white;
    font-size: 24rpx;
    
}
.fruit-type-list swiper-item{
    /* border: solid black 1px; */
    height: 14vh;
    line-height: 14vh;
}
.fruit-type-list view{
    margin-left: 10rpx;
  
}
.bold{
    font-weight: bold;
    color: brown;
