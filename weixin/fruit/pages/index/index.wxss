}

.img-view image{
   width: 200rpx;
   height: 150rpx;
}
.carts-img{
    width: 50rpx;
    height: 50rpx;
}
.fruit-info{
    width: 100%;
    padding-left: 10rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
}
.itile{
