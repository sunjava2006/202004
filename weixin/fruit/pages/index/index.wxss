.modal{
    background-color: rgba(8, 8, 8, 0.9);
    height: 100vh;
    width: 100vw;
    position: absolute;
    top:0;
    display: flex;
    justify-content: center;
    align-items: center;
}
.carts{
    width: 500rpx;
    height: 700rpx;
    background-color: white;
    border-radius: 10rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-evenly;
    

}

.carts view{
    /* border: solid black 1px; */
    width: 400rpx;
    
}

.image{
