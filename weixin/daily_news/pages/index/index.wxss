.search-bar{
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    background:red;
    height: 10vh;
    align-items: center;
}
.text{
    color: white;
    height: 8vh;
    line-height: 8vh;

}
.input-group{
    height: 6vh;
    background: white;
    width: 500rpx;
    border-radius: 10rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
    
}
.input-group>image{
    width: 4vh;
    height: 4vh;
}
.input-group>input{
    /* background: yellow; */
    width: 400rpx;
}



.items-bar{
    background: pink;
    height: 8vh;
    display: flex;
}
.items-bar>swiper{
   width: 650rpx;
   height: 8vh;
   /* background: blue; */
}
.plus{
    /* background: yellow; */
    font-size: 2.5em;
    height: 100rpx;
    width: 100rpx;
    line-height: 8vh;
    text-align: center;
}
.items-bar>swiper view{
   width: 150rpx;
   line-height: 8vh;
   height: 8vh;
}
.item{
    /* border: solid black 1px; */

    height: 8vh;
    line-height: 8vh;
    display: initial;
    text-align: center;
   
}



.news-list{
    height: 82vh;
    /* background: yellow; */
}



.bold{
    font-weight: bold;
}
.scroll-news{
   height: 82vh;
   display: flex;
   flex-direction: column;
   align-items: center;
   width: 100vw;

}
.news{
    margin: 10rpx;
    width: 730rpx;
    border-bottom: solid gray 1px;
}
.title{
    font-size: 1.4em;
    color: #444;
}
.info{
    display: flex;
    justify-content: space-between;
    color: gray;
}
.img-list{
    display: flex;
    justify-content: space-between;
}
.img-list>image{
    width: 240rpx;
    height: 180rpx;
}